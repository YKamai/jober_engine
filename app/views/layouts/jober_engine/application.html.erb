<!DOCTYPE html>
<html>
<head>
  <title>Jober engine</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "jober_engine/application", media: "all" %>

  <%= javascript_include_tag 'jober_engine/application' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

  <div class="row">

    <div class="col col-md">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Job Manager</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
              <%= link_to 'All Jobs', root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
              <%= link_to 'Home', '/', class: 'nav-link' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <div class="row justify-content-md-center">
      <div class="col col-md-10">
      <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
